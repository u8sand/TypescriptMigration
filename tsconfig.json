{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "plugins": [
      { "transform": "ts-transformer-keys/transformer" }
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "compiler": "ttsc"
}